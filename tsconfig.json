{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "module": "commonjs",
        "resolveJsonModule": true,
        "target": "es2018",
        "types": [
            "node"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "src/core/mocks"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "package.json"
    ]
}
